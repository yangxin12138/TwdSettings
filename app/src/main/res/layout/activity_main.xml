<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#103AE9"
    android:orientation="vertical">

    <TextView
        android:id="@+id/index_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_marginStart="100dp"/>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_below="@+id/index_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/LL_index_projection"
            android:layout_marginStart="120dp"
            android:layout_width="450dp"
            android:layout_height="80dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/im_projection"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/projection"/>
            <TextView
                android:id="@+id/projection_text"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="投影设置"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginStart="10dp"/>
            <ImageView
                android:id="@+id/indexArrow_projection"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="260dp"
                android:src="@drawable/arrow"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/LL_index_projection"
            android:id="@+id/LL_index_wifi"
            android:layout_marginStart="120dp"
            android:layout_width="450dp"
            android:layout_height="80dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/im_wifi"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/wifi"/>
            <TextView
                android:id="@+id/wifi_text"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="网络"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginStart="10dp"/>
            <ImageView
                android:id="@+id/indexArrow_wifi"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="260dp"
                android:src="@drawable/arrow"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/LL_index_wifi"
            android:id="@+id/LL_index_bluetooth"
            android:layout_marginStart="120dp"
            android:layout_width="450dp"
            android:layout_height="80dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/im_bluetooth"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/bluetooth"/>
            <TextView
                android:id="@+id/bluetooth_text"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="蓝牙"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginStart="10dp"/>
            <ImageView
                android:id="@+id/indexArrow_bluetooth"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="260dp"
                android:src="@drawable/arrow"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/LL_index_bluetooth"
            android:id="@+id/LL_index_setup"
            android:layout_marginStart="120dp"
            android:layout_width="450dp"
            android:layout_height="80dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/im_setup"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/setup"/>
            <TextView
                android:id="@+id/setup_text"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="通用"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginStart="10dp"/>
            <ImageView
                android:id="@+id/indexArrow_setup"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="260dp"
                android:src="@drawable/arrow"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/LL_index_setup"
            android:id="@+id/LL_index_about"
            android:layout_marginStart="120dp"
            android:layout_width="450dp"
            android:layout_height="80dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/im_about"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/about"/>
            <TextView
                android:id="@+id/about_text"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="系统与设备"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginStart="10dp"/>
            <ImageView
                android:id="@+id/indexArrow_about"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="260dp"
                android:src="@drawable/arrow"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="570dp"
            android:layout_width="390dp"
            android:layout_height="400dp"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/display_pic"
                android:src="@drawable/about"
                android:layout_width="200dp"
                android:layout_height="200dp"/>
            <TextView
                android:id="@+id/display_text"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="系统与设备"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>