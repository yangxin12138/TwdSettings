<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    tools:context=".universal.UniversalActivity">

    <LinearLayout
        android:layout_marginTop="@dimen/universal_title_marginTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/universal_title_iv_width"
            android:layout_height="@dimen/universal_title_iv_height"
            android:src="@drawable/arrow_back_white"
            android:layout_marginStart="@dimen/universal_title_iv_marginStart"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:text="通用"
            android:textColor="@color/white"
            android:textSize="@dimen/universal_title_tv_textSize"
            android:layout_width="@dimen/universal_title_tv_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/universal_title_tv_marginStart"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/universal_content_LL_paddingStart"
        android:paddingTop="@dimen/universal_content_LL_paddingTop"
        android:paddingEnd="@dimen/universal_content_LL_paddingEnd"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/universal_LL_input"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/universal_content_LL_height">
            <TextView
                android:id="@+id/universal_tv_input"
                android:text="输入法"
                android:textSize="@dimen/universal_tv_textSize"
                android:textColor="@color/white"
                android:layout_width="@dimen/universal_tv_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/universal_tv_marginStart"/>
            <TextView
                android:id="@+id/universal_tv_inputcurrent"
                android:text=""
                android:textSize="@dimen/universal_tv_textSize"
                android:textColor="@color/white"
                android:layout_width="@dimen/universal_tv_width"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/universal_current_tv_marginStart"/>
            <ImageView
                android:id="@+id/arrow_input"
                android:src="@drawable/arrow"
                android:layout_marginStart="@dimen/universal_current_arrow_marginStart"
                android:layout_width="@dimen/universal_current_arrow_width"
                android:layout_height="@dimen/universal_current_arrow_height"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/universal_LL_language"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/universal_content_LL_height">
            <TextView
                android:id="@+id/universal_tv_language"
                android:text="语言"
                android:textSize="@dimen/universal_tv_textSize"
                android:textColor="@color/white"
                android:layout_width="@dimen/universal_tv_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/universal_tv_marginStart"/>
            <TextView
                android:id="@+id/universal_tv_languagecurrent"
                android:text=""
                android:textSize="@dimen/universal_tv_textSize"
                android:textColor="@color/white"
                android:layout_width="@dimen/universal_tv_width"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/universal_current_tv_marginStart"/>
            <ImageView
                android:id="@+id/arrow_language"
                android:src="@drawable/arrow"
                android:layout_marginStart="@dimen/universal_current_arrow_marginStart"
                android:layout_width="@dimen/universal_current_arrow_width"
                android:layout_height="@dimen/universal_current_arrow_height"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>